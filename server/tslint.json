{
  "extends": ["tslint:latest"],
  "linterOptions": {
    "exclude": ["src/orm/migrations/*"]
  },
  "rules": {
    "interface-name": [true, "never-prefix"],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "object-literal-sort-keys": false,
    "no-empty-interface": false,
    "no-console": false,
    "no-unused-expression": false,
    "arrow-parens": false,
    "no-namespace": false
  }
}
